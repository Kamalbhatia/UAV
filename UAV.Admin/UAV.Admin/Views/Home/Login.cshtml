            <h3 class="text-center"><img src="~/Content/Images/login-logo.png" /></h3>
            <div class="formOuter">
                @*<div class="bckBtn"><a href=""><i class="fa fa-angle-left" aria-hidden="true"></i></a></div>*@
                <h4>Admin Login</h4>
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <label>Username</label>
                        <div class="iconBoxInput">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @Placeholder = "UserName" })
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "validation" })
                            <i><img src="~/Content/Images/usericon.png" /></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <div class="iconBoxInput">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @Placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "validation" })

                            <i><img src="~/Content/Images/mail-icon.png" /></i>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-control rem-me" })
                        @Html.ValidationMessageFor(model => model.RememberMe, null, new { @class = "validation" })
                        <label class="rem-me-label">Remember Me</label>



                        <div class="clearfix"></div>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-custom btn-block" name="Login" value="Login" />

                    </div>


                }
            </div>

        </div>
    </div>
</div>













